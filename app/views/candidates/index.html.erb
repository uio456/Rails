<div class="container">
  <div class="row">
    <h1>候選人列表</h1>
      <table>
        <thead>
          <tr>
            <td> 候選人姓名 </td>
            <td> 政黨 </td>
            <td> 政見 </td>
            <td>得票數</td>
          </tr>
        </thead>
        <tbody>
          <% @candidates.each do |candiadte|%>
            <tr>
              <td><%= candiadte.name %> (年齡：<%= candidate.age %> 歲 )</td>
              <td><%= candiadte.party %></td>
              <td><%= candidate.politics %></td>
              <td><%= candidate.votes %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>