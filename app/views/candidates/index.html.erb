<div class="container">
  <div class="row">
    <h1>候選人列表</h1>
      <table>
        <thead>
          <tr>
            <td>投票</td> 
            <td> 候選人姓名 </td>
            <td> 政黨 </td>
            <td> 政見 </td>
            <td>得票數</td>
          </tr>
        </thead>
        <tbody>
          <% @candidates.each do |candidate|%>
            <tr>
              <td><%= link_to '投給這位', vote_candidate_path(candidate), method: :post, data: {confirm: "確定投票嗎？"} %></td>
              <td><%= candidate.name %> (年齡：<%= candidate.age %> 歲 )</td>
              <td><%= candidate.party %></td>
              <td><%= candidate.politics %></td>
              <td><%= candidate.vote_logs.size %></td>
              <td>
                <%= link_to "編輯候選人", candidates_path(id: candidate.id)%>
                <%= link_to "刪除候選人", candidate_path(candidate), method: :delete, data: { confirm: "確定刪除？" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <br>
      <br>
      <%= simple_form_for(@candidate) do |f| %>
        <%= f.input :name, label: "姓名" %>
        <%= f.input :age, label: "年齡" %>
        <%= f.input :party, label: "政黨" %>
        <%= f.input :politics, label: "政見" %>
        <%= f.submit %>
      <% end %>
  </div>
</div>