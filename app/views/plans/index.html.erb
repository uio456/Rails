<div class="row">
  <div class="col-md-12 new-plan">
    <h3><%= link_to '新計畫', new_plan_path %></h3>
    <hr>
  </div>
  
  <div class="plans_list col-md-6">
    <h3>計畫清單</h3>
    <ul>
      <% @plans.each do |plan| %>
        <li><%= link_to plan.title, plan_path(plan) %></li>
        <hr>
      <% end %>
    </ul>  
  </div>

  <div class="members-list col-md-6">
    <h3>使用者清單</h3>
    <ul>
      <% @members.each do |member| %>
        <li><%= link_to member.name, member_path(member) %></li>
        <hr>
      <% end %>
    </ul>  
  </div>
</div>



